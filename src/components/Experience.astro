---
import ExperienceItem from "./ExperienceItem.astro";

const EXPERIENCE = [
  {
    title: "Fullstack Developer",
    company: "Technologies of Colombia",
    dates: "Mayo 2023 - Present",
    description: `I develop and maintain a web application for the financial and human capital sector, primarily working on the frontend with React. I also contribute to backend development using NestJS, ensuring a seamless and scalable product experience.`,
  },
];
---

<ol class="relative mt-12 border-l-4 border-fuchsia-500">
  {
    EXPERIENCE.map((experience) => (
      <li class="mb-12 ml-6 relative">
        {/* Punto en la l√≠nea */}
        <span class="absolute -left-[40px] top-6 flex items-center justify-center w-7 h-7 bg-fuchsia-600 rounded-full border-4 border-white" />

        {/* Tarjeta */}
        <div class="p-6 rounded-xl shadow-lg bg-gradient-to-r from-fuchsia-600/30 to-purple-600/30 text-white">
          <h3 class="text-xl font-bold flex flex-wrap items-center gap-2">
            {experience.title}
            <span class="text-sm font-medium bg-white/20 px-2 py-0.5 rounded-md">
              {experience.company}
            </span>
          </h3>
          <p class="text-sm opacity-90 mt-1">{experience.dates}</p>
          <p class="mt-3 leading-relaxed">{experience.description}</p>
        </div>
      </li>
    ))
  }
</ol>

        <div class="space-y-8 text-center md:text-left">
          <!-- Badge -->
          <div
            class="inline-flex items-center gap-2 bg-fuchsia-600/10 border border-violet-500 text-fuchsia-500 px-4 py-2 rounded-full text-base font-medium shadow-md"
